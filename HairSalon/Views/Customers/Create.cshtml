@{
  Layout = "_Layout";
}

@model HairSalon.Models.Customer

<h4>Add a new Customer</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new Customer" class="btn btn-default" />
}
<p>@Html.ActionLink("Show All customers", "Index")</p>