@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Customer>;

<h1>Customers</h1>

@if (@Model.Count == 0)
{
  <h3>No customers have been added yet!</h3>
} 

@foreach (Customer customer in Model)
{
  <li>@Html.ActionLink($"{customer.Name}", "Details", new { id = customer.CustomerId }) | @customer.Description </li>
}

<p>@Html.ActionLink("Add new customer", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>